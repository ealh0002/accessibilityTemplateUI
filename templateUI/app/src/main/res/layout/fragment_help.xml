<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.help.HelpFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.help.HelpFragment"
        android:paddingBottom="20dp">

        <TextView
            android:id="@+id/text_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/opensans_semibold"
            android:text="How to use this app?"
            android:textAlignment="center"
            android:textColor="@color/mint_green_main"
            android:textSize="20sp"
            tools:ignore="HardcodedText"
            android:layout_marginTop="20dp"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="582dp"
            tools:context=".ui.help.HelpFragment">

            <!--   Header: Can't watch? No problem     -->
            <TextView
                android:id="@+id/help_steps_header"
                android:layout_width="325dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:layout_marginTop="220dp"
                android:layout_marginEnd="0dp"
                android:fontFamily="@font/opensans_semibold"
                android:text="Can't watch? No problem!"
                android:textColor="@color/mint_green_main"
                android:textSize="16sp"
                tools:ignore="HardcodedText" />

            <!-- Grey divider       -->
            <LinearLayout
                android:id="@+id/line0"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_below="@id/help_steps_header"
                android:background="#ccc8c8" />

            <!-- Button 1: Upload a video   -->
            <LinearLayout
                android:id="@+id/layout1"
                android:layout_width="fill_parent"
                android:layout_height="50sp"
                android:layout_below="@id/line0"
                android:background="#fefafa"
                android:orientation="horizontal"
                android:weightSum="100"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/number1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="80"
                    android:fontFamily="@font/opensans_semibold"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="@color/mint_green_main"
                    android:textSize="22sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/video_upload"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:fontFamily="@font/opensans_regular"
                    android:gravity="left"
                    android:text="How to upload a video?"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <!-- Grey divider       -->
            <LinearLayout
                android:id="@+id/line1"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_below="@id/layout1"
                android:background="#ccc8c8" />

            <!-- Button 2: Check the shortcut history       -->
            <LinearLayout
                android:id="@+id/layout2"
                android:layout_width="fill_parent"
                android:layout_height="50sp"
                android:layout_below="@id/line1"
                android:background="#fefafa"
                android:orientation="horizontal"
                android:weightSum="100"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/number2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="80"
                    android:fontFamily="@font/opensans_semibold"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/mint_green_main"
                    android:textSize="22sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/build_version"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:fontFamily="@font/opensans_regular"
                    android:gravity="left"
                    android:text="How to view shortcut history?"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>


            <!-- Grey divider       -->
            <LinearLayout
                android:id="@+id/line2"
                android:layout_width="fill_parent"
                android:layout_height="2dp"
                android:layout_below="@id/layout2"
                android:background="#ccc8c8" />

            <!-- Button 2: Check the shortcut history       -->
            <LinearLayout
                android:id="@+id/layout3"
                android:layout_width="fill_parent"
                android:layout_height="50sp"
                android:layout_below="@id/line2"
                android:background="#fefafa"
                android:orientation="horizontal"
                android:weightSum="100"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/number3"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="80"
                    android:fontFamily="@font/opensans_semibold"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/mint_green_main"
                    android:textSize="22sp"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/explore_videos"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="20"
                    android:fontFamily="@font/opensans_regular"
                    android:gravity="left"
                    android:text="How to explore more videos?"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>


        </RelativeLayout>


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/nav_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bottom_nav_menu" />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


