<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.settings.SettingsFragment">


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/bottom_nav_menu" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:orientation="horizontal"
            android:weightSum="100"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#fefafa"
            >

            <TextView
                android:id="@+id/ipv4_address_title"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="50"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="center"
                android:text="IPV4 Address:"
                android:textColor="@color/mint_green_main"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/ipv4_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_semibold"
                android:text="Hardcoded1"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:ignore="HardcodedText"
                android:gravity = "center"
                android:layout_weight = "50"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/line"
            android:layout_height="2dp"
            android:layout_width="fill_parent"
            android:background="#ccc8c8"
            android:layout_below="@id/layout1"
            />

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:orientation="horizontal"
            android:weightSum="100"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#fefafa"
            android:layout_below="@id/line"
            >

            <TextView
                android:id="@+id/build_version_title"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="50"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="center"
                android:text="Build Version:"
                android:textColor="@color/mint_green_main"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/build_version"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_semibold"
                android:text="Hardcoded2"
                android:textColor="@color/black"
                android:textSize="18sp"
                tools:ignore="HardcodedText"
                android:gravity = "center"
                android:layout_weight = "50"
                />

        </LinearLayout>



        <LinearLayout
            android:id="@+id/line2"
            android:layout_height="2dp"
            android:layout_width="fill_parent"
            android:background="#ccc8c8"
            android:layout_below="@id/layout2"
            />

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="fill_parent"
            android:layout_height="50sp"
            android:orientation="horizontal"
            android:weightSum="100"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#fefafa"
            android:layout_below="@id/line2"
            >

            <TextView
                android:id="@+id/terms_policies"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="50"
                android:fontFamily="@font/opensans_semibold"
                android:gravity="center_vertical|center_horizontal"
                android:text="Terms and Policies"
                android:textColor="@color/mint_green_main"
                android:textSize="20sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/line3"
            android:layout_height="2dp"
            android:layout_width="fill_parent"
            android:background="#ccc8c8"
            android:layout_below="@id/layout3"
            />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>